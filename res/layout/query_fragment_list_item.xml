<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="4dp"
    >
    
      <TextView
           android:id="@+id/query_fragment_item_goodsName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:text="品名 : 中华牙膏"
           android:textColor="@drawable/keys_num_textcolor_selector"
           android:textSize="15sp"
            />
      <TextView 
          android:id="@+id/query_fragment_item_goodsPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="3dp"
          android:singleLine="true"
          android:textColor="@drawable/keys_num_textcolor_selector"
          android:textSize="15sp"
          android:layout_below="@id/query_fragment_item_goodsName"
          android:text="条码  : 23826762324 单价 : 10.8元/个"
          />
      
      <TextView 
          android:id="@+id/add_consumer_delete_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/delete_consumer_selector"
          android:paddingRight="10dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:clickable="true"
          android:paddingLeft="7dp"
          android:paddingBottom="2dp"
          android:text="X"
          android:gravity="center"
          android:textColor="@drawable/add_consumer_text_selector"
          />

</RelativeLayout>
